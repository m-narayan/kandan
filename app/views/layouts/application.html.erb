<!DOCTYPE html>
<html>
<head>
  <title>Kandan</title>
  <%= stylesheet_link_tag  "//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/ui-lightness/jquery-ui.css" %>
  <%= stylesheet_link_tag "//fonts.googleapis.com/css?family=PT+Sans:400,700" %>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= favicon_link_tag %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript_includes %>

  <%= csrf_meta_tags %>

  <%- if user_signed_in? %>
    <%= javascript_tag do %>
      $.data(document, "current-user", <%= current_user_data.to_json.html_safe %>);
       $.data(document, "current_channel_id", <%= session[:channel_id].to_json.html_safe %>);
    <% end %>
  <%- end %>
</head>
<body data-kandan-config="<%= Kandan::Config.to_json %>">
  <div id="kandan">
    <div class="header" >
      <a href="/">
        <%= image_tag "logo.png", :class=>"logo" , :style=> "display:none;"%>  
      </a>
      
       
      </div>
      
  
     
    <div id="app_body" >

    <%= yield %>
    </div>
  </div>
</body>
</html>
